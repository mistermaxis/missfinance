<div class="view-container flex">
  <nav class="navbar login-navbar">
    <a class="back-button white-text" href=<%= url_for(:root) %>>&larr;</a>
    <span class="nav-header">LOGIN</span>
    <div>
      <input class="login-button white-text" type="submit" name="commit" value="NEXT" data-disable-with="NEXT" form="new_user">
    </div>
  </nav>
  <div class="content-list flex">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "list-item flex form" }) do |f| %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , required: true, placeholder: "Email", class: "form-input" %>
    <%= f.password_field :password, autocomplete: "current-password" , required: true, placeholder: "Password", class: "form-input" %>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>