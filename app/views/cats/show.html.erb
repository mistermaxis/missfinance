<div class="view-container flex">
  <nav class="navbar">
    <div></div>
    <span class="nav-header">CATEGORIES</span>
    <%= button_to 'LOGOUT', destroy_user_session_path, method: :delete, form_class: 'logout-button' %>
  </nav>
  <div class="content-list flex">
    <div class="list-item flex">
      <div class="list-item-info flex amount">
        <span>Total amount for this category: </span><span>$<%= @total_amount || 0.0 %></span>
      </div>
    </div>
    <% if @category.bills.present? %>
      <% @category.bills.order("created_at DESC").each do |bill| %>
    <div class="list-item flex">
      <div class="list-item-transaction flex">
        <span class="list-item-name"><%= bill.name %></span>
        <span>$<%= bill.amount %></span>
      </div>
    </div>
      <% end %>
    <% end %>
  </div>
  <%= button_to "NEW TRANSACTION", new_bill_path, method: :get, class: "bottom-action-button flex white-text", form_class: "bottom-action green-button flex" %>
</div>